{
  "name": "bloom-css",
  "version": "0.3.0",
  "description": "Funcaiontal CSS for the future",
  "main": "bloom.css",
  "scripts": {
    "develop": "postcss 'src/**/*.css' --base src -d . -w",
    "build": "NODE_ENV=production postcss 'src/**/*.css' --base src -d .",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf ./bloom.css ./lib"
  },
  "files": [
    "/bloom.css",
    "/lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radioactivepesto/bloom.git"
  },
  "keywords": [
    "css",
    "css-utilities",
    "functional-css",
    "css-framework",
    "css-variables",
    "design-system"
  ],
  "author": {
    "name": "Radioactive Pesto",
    "url": "https://radioactivepesto.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/radioactivepesto/bloom/issues"
  },
  "homepage": "https://bloom.style",
  "devDependencies": {
    "cssnano": "^4.1.10",
    "postcss-cli": "^7.1.1",
    "postcss-custom-media": "^7.0.8",
    "postcss-font-family-system-ui": "^4.2.0",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.0.5",
    "stylelint": "^13.3.3",
    "stylelint-config-recommended": "^3.0.0"
  }
}
