{
  "name": "pollen-css",
  "version": "4.2.0",
  "description": "Utility-first CSS for the future",
  "main": "pollen.css",
  "style": "pollen.css",
  "types": "types.d.ts",
  "bin": {
    "pollen": "index.js"
  },
  "scripts": {
    "develop": "rollup -c -w & vitest",
    "build": "NODE_ENV=production rollup -c && node ./index.js ",
    "prepublishOnly": "npm run build && npm run test",
    "clean": "rm -rf ./pollen.css ./utils",
    "test": "vitest run",
    "coverage": "vitest --coverage"
  },
  "files": [
    "/pollen.css",
    "/utils",
    "/index.js",
    "/index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heybokeh/pollen.git"
  },
  "keywords": [
    "css",
    "css-utilities",
    "functional-css",
    "css-framework",
    "css-variables",
    "design-system",
    "tailwindcss"
  ],
  "author": {
    "name": "Madeleine Ostoja <madi@heybokeh.com>"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/heybokeh/pollen/issues"
  },
  "homepage": "https://www.pollen.style",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/stringify-object": "^4.0.0",
    "c8": "^7.11.0",
    "rollup": "^2.59.0",
    "rollup-plugin-preserve-shebangs": "^0.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.4.7",
    "stylelint": "^14.0.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "vitest": "^0.5.9"
  },
  "dependencies": {
    "case": "^1.6.3",
    "commander": "^8.3.0",
    "cosmiconfig": "^7.0.1",
    "css-vars-ponyfill": "^2.4.7",
    "javascript-stringify": "^2.1.0",
    "map-obj": "^5.0.0"
  }
}
